<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<div style="text-align: center; width: 300px; margin: 50px auto;">
  <%= link_to 'New Activity', new_activity_path, class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Pages</th>
      <th>Setting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.pages %></td>
        <td><%= activity.setting %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
